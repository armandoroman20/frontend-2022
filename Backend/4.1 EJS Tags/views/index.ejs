<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Current Seconds: <%= seconds %></p>

    <%= seconds %> <% if (seconds % 2 === 0) {%>

    <ul>
      <% items.forEach((fruit) => { %>
      <li><%= fruit %></li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No items to display</p>
    <% } %>

    <p><%- htmlContent %></p>
  </body>
</html>
